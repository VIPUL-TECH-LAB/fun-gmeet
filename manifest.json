{
  "manifest_version": 3,
  "name": "FunGMeet",
  "version": "1.0",
  "description": "Display emoji reactions based on chat commands in Google Meet",
  "permissions": ["scripting"],
  "host_permissions": ["https://meet.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
